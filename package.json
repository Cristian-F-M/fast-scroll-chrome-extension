{
  "name": "chrome-extension",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean:extension": "shx rm -rf extension/ && shx mkdir extension/ && shx mkdir extension/popup/ && shx mkdir extension/icons/",
    "build:content": "tsc extension-src/js/**/* --outDir extension/",
    "copy:icons": "shx cp -r extension-src/icons/**/* extension/icons/",
    "copy:extension": "shx cp manifest.json extension/ && shx cp -r dist/* extension/popup/",
    "setup:extension": "bun run build && bun run clean:extension && bun run build:content && bun run copy:icons && bun run copy:extension"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.1.32",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "shx": "^0.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}